      </menus>
    </MenuBar>
      <HBox alignment="CENTER" prefWidth="200.0">
         <children>
            <Label text="WPM">
               <HBox.margin>
                  <Insets left="25.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="txtWPM" text="15" prefWidth="100"/>
            <Label text="Tone Freq">
               <HBox.margin>
                  <Insets left="25.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="txtToneFreq" text="750" prefWidth="100"/>
            <Label text="Volume">
