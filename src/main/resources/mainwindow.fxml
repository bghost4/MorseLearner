                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Letters" GridPane.columnSpan="2">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#onLearnButton" text="A" GridPane.rowIndex="1" />
                        <Button mnemonicParsing="false" onAction="#onLearnButton" text="B" GridPane.columnIndex="1" GridPane.rowIndex="1" />
